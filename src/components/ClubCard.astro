---
const { club } = Astro.props;  // Recibe datos como parámetro
---

<div class="bg-gray-900 p-4 rounded-xl">
  <img src={club.image} alt={club.name} class="w-full h-48 object-cover rounded-lg mb-2" />
  <h3 class="text-xl font-bold">{club.name}</h3>
  <p class="text-gray-400 text-sm">{club.location} – {club.music.join(", ")}</p>
  <p class="text-gray-500 text-sm">Edad media: {club.ageRange}</p>
</div>